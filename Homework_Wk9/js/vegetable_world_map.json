{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "ðŸ¥¦ Annual Vegetable Consumption Per Capita ðŸ¥¬",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "view": {"fill": "#d3f1ff", "stroke": null},

    "params": [
        {
          "name": "Year",
          "value": 2010,
          "bind": {
            "input": "range",
            "min": 1961,
            "max": 2017,
            "step": 1,
            "name": "Select the year:"
          }
        }
      ],
    "layer":[
        {
            "data": {
              "url": "https://raw.githubusercontent.com/ReenaZele/FIT3179/main/Homework_Wk9/js/world_map.json",
              "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
            },
            "mark": {"type": "geoshape", "fill": "#e4e4e4", "stroke": "#616161"}
          },

    {
        "data": {
            "url": "https://raw.githubusercontent.com/ReenaZele/FIT3179/main/Homework_Wk9/js/vegetable-consumption-per-capita.csv"
          },
          "transform": [
              

            {
              "lookup": "Entity",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/ReenaZele/FIT3179/main/Homework_Wk9/js/world_map.json",
                  "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME",
                "fields": ["properties", "type", "geometry"]
              }
            },
            {"filter": "datum.Year==Year"}
          ],
          
          "mark": {"type": "geoshape", "stroke": "#616161"},
          "encoding": {
            "color": {
                "field": "vegetable_intake", 
                "type": "quantitative",
                "title": "Vegetable Consumption (kg)",
                "bin": true             },
            "tooltip": [
              {"field": "properties.NAME", "type": "nominal", "title": "Country"},
              {"field": "vegetable_intake", "type": "quantitative", "title": "Vegetable Consumption Per Capita"}
            ]
          }
          
          
    },
    {
        "data": {
          "url": "world_map.json",
          "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "black", "opacity": 0.15}
      }
   ]
  }
